@{
}
@model List<primeraAppEnC_.Models.Persona>

<a asp-action="Create">Nueva persona</a>

<h1>Lista de personas</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Nombre</td>
                <td>@p.Apellido</td>
                <td>@p.Email</td>
            </tr>
        }
        <!--Si esta vacia la bd-->
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4">No hay personas registradas</td>
            </tr>
        }
    </tbody>
</table>
